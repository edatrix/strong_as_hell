<div class="container-fluid body">
  <div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6 form-body">
      <h3>Have a quote you'd like to share?  Add it below.</h3>

      <div class="col-md-12">
        <%= simple_form_for @inspiration, html: { :class => 'form-horizontal' } do |f| %>
          <%= render "error_messages", :target => @inspiration %>
          <%= f.input :name, :label => "Inspiring woman's name" %>
          <%= f.file_field :image, :label => "Image" %>
          <%= f.input :url, :label => "Image source" %>
          <%= f.input :text, :label => "Quote" %>
          <%= f.button :submit, :class => "right" %>
          <%= link_to "back", inspirations_path %>
        <% end %>
      </div>
    </div>

    <div class="col-md-3"></div>
  </div>
</div>

<script src="jquery.validate.min.js"></script>